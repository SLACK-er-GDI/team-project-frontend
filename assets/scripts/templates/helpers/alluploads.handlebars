{{#each uploads as |upload|}}
<!-- go through uploads array and do something on each one -->
        <div class="col-sm-6 col-md-3">
           <div class="thumbnail">
               <h4>{{upload.title}}</h4>
               <img src="{{upload.url}}" alt="...">
               <div class="col-xs-6" ><button data-id="{{upload.id}}" type="button" class="remove">Remove!</button></div>
               <div class="col-xs-6"><button data-id="{{upload.id}}" type="button" data-toggle="modal" data-target="#editUploadModal{{upload.id}}" class="edit">Update</button>
                 <!-- Edit upload modal -->
                 <form class="editUploadForm" id="file-upload-form">
                 <div class="modal fade" id="editUploadModal{{upload.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                   <div class="modal-dialog" role="document">
                     <div class="modal-content">
                       <div class="modal-header">
                         <h5 class="modal-title">Edit Upload</h5>
                         <span aria-hidden="true">&times;</span>
                       </div>
                       <div class="modal-body">
                           <div class="form-group">
                             <label class="col-form-label">Title</label>
                             <input type="text" name="upload[title]" class="form-control" id="file-upload-title" placeholder="change title">
                           </div>
                       </div>
                       <div class="container">
                         <div class="row">
                              <div class="col-lg-12">
                                <div class="button-group">
                                   <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown"></span> <span class="caret"></span>Add Tags</button>
                                     <ul class="dropdown-menu">
                                       <li><a href="#" class="small" data-value="Animal" tabIndex="-1"><input type="checkbox" name="tags[animal]"/>&nbsp;Animal</a></li>
                                       <li><a href="#" class="small" data-value="Landscape" tabIndex="-1"><input type="checkbox" name="tags[landscape]"/>&nbsp;Landscape</a></li>
                                       <li><a href="#" class="small" data-value="Person" tabIndex="-1"><input type="checkbox" name="tags[person]"/>&nbsp;Person</a></li>
                                     </ul>
                             </div>
                             </div>
                         </div>
                       </div>
                       <div class="modal-footer">
                         <button type="button" class="btn btn-primary modal-button" data-dismiss="modal">Close</button>
                         <button type="submit" name="submit" class="btn btn-primary modal-button saveEdit">Save</button>
                       </div>
                       </form>
                     </div>
                   </div>
                 </div>
                 <!-- end of edit modal -->
               </div>
               <div class="clearfix"></div>
           </div>
         </div>
{{/each}}
